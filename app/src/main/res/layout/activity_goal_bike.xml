<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/bike_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:ems="10"
            android:hint="자전거 목표 제목을 입력하세요"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/bike_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="목표 거리를 입력하세요"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bike_btnStartDate"
                android:text="시작 날짜 선택"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/login_button"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_sans_jp_regular"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                ></Button>

            <Button
                android:id="@+id/bike_btnEndDate"             android:layout_margin="10dp"
                android:textColor="@color/white"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/login_button"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_sans_jp_regular"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="종료 날짜 선택"></Button>

        </LinearLayout>

        <Button
            android:layout_gravity="center"
            android:id="@+id/bike_save"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/login_button"
            android:includeFontPadding="false"
            android:fontFamily="@font/noto_sans_jp_regular"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="저장"></Button>

    </LinearLayout>

</LinearLayout>