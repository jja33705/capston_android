<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/round_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="相手選択"
        android:textSize="20sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/noto_sans_jp_bold"
        android:textColor="@color/white"
        android:background="@drawable/dialog_title_background"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/silver_color"
        android:orientation="horizontal"
        >
        <TextView
            android:paddingHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="タイトル"
            android:fontFamily="@font/noto_sans_jp_light"
            android:includeFontPadding="false"
            android:layout_gravity="center"
            android:textColor="@color/black"
            >
        </TextView>
        <TextView
            android:paddingHorizontal="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="選手、日時"
            android:fontFamily="@font/noto_sans_jp_light"
            android:includeFontPadding="false"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1"
            >
        </TextView>
        <TextView
            android:layout_marginRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="時間、速度"
            android:fontFamily="@font/noto_sans_jp_light"
            android:includeFontPadding="false"
            android:layout_gravity="center"
            android:textColor="@color/black"
            >
        </TextView>
    </LinearLayout>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_friendly_match"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        >

    </androidx.recyclerview.widget.RecyclerView>

    

