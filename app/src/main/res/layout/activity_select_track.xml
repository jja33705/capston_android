<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectTrackActivity"
    >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">`</fragment>

    <org.angmarch.views.NiceSpinner
        android:id="@+id/spinner_exercise_type"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="10dp">
    </org.angmarch.views.NiceSpinner>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_search_track"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="70dp"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        android:drawableLeft="@drawable/search_icon"
        android:background="@drawable/round_button_background"
        android:text="현재 지도에서 다시 검색"
        android:textSize="16dp"
        >
    </androidx.appcompat.widget.AppCompatButton>

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="600dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_track_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginRight="10dp"
                >
            </TextView>
            <Button
                android:id="@+id/btn_track_information"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:text="상세 정보"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_track_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_normal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="혼자하기"></Button>

            <Button
                android:id="@+id/button_friendly"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="친선전"></Button>

            <Button
                android:id="@+id/button_rank"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="랭크전"></Button>

        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>