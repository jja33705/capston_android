<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".activity.CountDownActivity">

    <TextView
        android:id="@+id/tv_count_down_three"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-150dp"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="120sp"
        android:fontFamily="@font/noto_sans_jp_bold"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/tv_count_down_two"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-150dp"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="120sp"
        android:fontFamily="@font/noto_sans_jp_bold"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_count_down_one"></TextView>

    <TextView
        android:id="@+id/tv_count_down_one"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-150dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="120sp"
        android:fontFamily="@font/noto_sans_jp_bold"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>