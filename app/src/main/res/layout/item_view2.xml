<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="50dp"
    android:layout_marginLeft="50dp"
    android:orientation="vertical"
    android:background="@drawable/round_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <ImageButton

            android:id="@+id/imageButton"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/main_profile"
           ></ImageButton>
        <TextView
            android:hint="이름"
            android:includeFontPadding="false"
            android:fontFamily="@font/noto_sans_jp_black"
            android:layout_margin="5dp"
            android:id="@+id/txtUser_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_gravity="center"
            android:textColor="#666666"
            android:textSize="16dp"></TextView>
        <TextView
            android:includeFontPadding="false"
            android:fontFamily="@font/noto_sans_jp_black"
            android:id="@+id/txtUser_created_id"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="#666666"
            android:textSize="10dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="제목"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_sans_jp_regular"
                android:layout_margin="5dp"
                android:id="@+id/txtUser_title"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#666666"
                android:textSize="24dp" />
            <ImageView
                android:id="@+id/imgUser_icon"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:background="@drawable/map" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>