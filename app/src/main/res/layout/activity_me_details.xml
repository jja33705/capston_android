<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SNSDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_border"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <EditText
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_sans_jp_black"
                android:id="@+id/title"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_below="@id/function_nav"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:focusable="false"
                android:hint="제목"
                android:textSize="24dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_sans_jp_black"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:text="2022-04-13T04:57:26.119Z"
                android:id="@+id/createdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <ImageView
            android:padding="3dp"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/map" />
        <LinearLayout
            android:id="@+id/function_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/commentButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/comment" />
            <ImageButton
                android:id="@+id/range"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/lock1" />
            <ImageButton
                android:id="@+id/edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/edit" />
            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="30dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp"
                android:src="@drawable/delete"
                android:text="삭제"></ImageButton>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <EditText
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_sans_jp_black"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/function_nav"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:focusable="false"
                android:hint="내용"
                android:textSize="20sp" />
        </LinearLayout>





<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_jp_regular"
            android:includeFontPadding="false"
            android:text="시간 : "
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_jp_regular"
            android:includeFontPadding="false"
            android:text="칼로리 : "
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_jp_regular"
            android:includeFontPadding="false"
            android:text="종류 : "
            android:textSize="16sp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/average_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_jp_regular"
            android:includeFontPadding="false"
            android:text="평균 속도 : "
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/altitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_jp_regular"
            android:includeFontPadding="false"
            android:text="고도 : "
            android:textSize="16sp"></TextView>
        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_jp_regular"
            android:includeFontPadding="false"
            android:text="거리 : "
            android:textSize="16sp"></TextView>

    </LinearLayout>
</LinearLayout>
















