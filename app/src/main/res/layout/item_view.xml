<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginRight="50dp"
    android:layout_marginLeft="50dp"
    android:orientation="vertical"
    android:background="@drawable/round_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <ImageButton
            android:visibility="gone"
            android:id="@+id/imageButton"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/main_profile"
           ></ImageButton>
        <TextView
            android:hint="제목"
            android:includeFontPadding="false"
            android:fontFamily="@font/noto_sans_jp_black"
            android:layout_margin="5dp"
            android:id="@+id/txtUser_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="#666666"
            android:textSize="20dp"></TextView>
        <TextView
            android:includeFontPadding="false"
            android:gravity="right"
            android:fontFamily="@font/noto_sans_jp_black"
            android:id="@+id/txtUser_created_id"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="#666666"
            android:textSize="10dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:padding="7.5dp"
                android:layout_height="320dp"
                android:background="@drawable/round_border2"
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>
                <TextView
                    android:gravity="right"
                    android:visibility="gone"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/noto_sans_jp_regular"
                    android:layout_margin="5dp"
                    android:id="@+id/txtUser_title"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textColor="#666666"
                    android:textSize="24dp" />
            <TextView
                android:id="@+id/page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>