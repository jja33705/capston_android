<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAECEB"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgUser_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/sakai" />

        <LinearLayout
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#E6E6E6"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtUser_title"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="#EEEEFA"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#666666"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/txtUser_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="#EEEEFA"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#666666"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/txtUser_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="#EEEEFA"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#666666"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtUser_created_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="#EEEEFA"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#666666"
                android:textSize="12dp" />



            <TextView
                android:id="@+id/txtUser_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="#EEEEFA"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#666666"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>